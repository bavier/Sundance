##########################################################################
#
# Macro definitions to be exported from Sundance to clients
# 
# -- KL 9 August 2004
#
##########################################################################





#-------------------------------------------------------------------------
# Set the absolute path to the Sundance build directory
#-------------------------------------------------------------------------

SUNDANCE_BUILD_DIRECTORY = @SUNDANCE_BUILD_DIRECTORY@

TRILINOS_DIR = @TRILINOS_DIR@


#-------------------------------------------------------------------------
# Linker command flags
#-------------------------------------------------------------------------

SUNDANCE_LIBS = $(STD_FWK_LIBS) $(STD_MESH_LIBS) $(CORE_LIBS) $(UTIL_LIBS) 

UTIL_LIBS = -L$(SUNDANCE_BUILD_DIRECTORY)/src-utils -lsundanceUtils $(TRILINOS_LIBS)

CORE_LIBS = -L$(SUNDANCE_BUILD_DIRECTORY)/src-core -lsundanceCore

STD_MESH_LIBS = -L$(SUNDANCE_BUILD_DIRECTORY)/src-std-mesh -lsundanceStdMesh

STD_FWK_LIBS = -L$(SUNDANCE_BUILD_DIRECTORY)/src-std-framework -lsundanceStdFwk


#-------------------------------------------------------------------------
# Path to headers
#-------------------------------------------------------------------------
 
SUNDANCE_INCLUDES = -I$(SUNDANCE_BUILD_DIRECTORY)/include \
  -I$(TRILINOS_DIR)/include 



# ------------------------------------------------------------------------
#
# include macros specified by Trilinos
#
# ------------------------------------------------------------------------

include $(TRILINOS_DIR)/packages/TSFExtended/Makefile.export


RANLIB = $(TEUCHOS_RANLIB)

CFLAGS = $(TEUCHOS_CFLAGS)
FFLAGS = $(TEUCHOS_FFLAGS)
CXXFLAGS = $(TEUCHOS_CXXFLAGS)
LDFLAGS = $(TEUCHOS_LDFLAGS)

MPI_LIBS = $(TEUCHOS_MPI_LIBS)
MPI_LIBDIR = $(TEUCHOS_MPI_LIBDIR)
MPI_INC = $(TEUCHOS_MPI_INC)
MPI_DIR = $(TEUCHOS_MPI_DIR)

FLIBS = $(TEUCHOS_FLIBS)
BLAS_LIBS = $(TEUCHOS_BLAS_LIBS)
LAPACK_LIBS = $(TEUCHOS_LAPACK_LIBS)

CXX = @CXX@

CC = @CC@